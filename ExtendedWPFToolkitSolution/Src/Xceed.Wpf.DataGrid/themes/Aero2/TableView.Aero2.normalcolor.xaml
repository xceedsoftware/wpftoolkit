   <!-- Groups -->
   <SolidColorBrush x:Key="groupByControlBackgroundBrush"
                    Color="Gray" />
   <SolidColorBrush x:Key="groupLevelIndicatorBackgroundBrush"
                    Color="#FFDFE7F2" />
